---
import Head from './Head.astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body>
    <main class="flex min-h-screen flex-col">
      <header class="sticky top-0 z-40 bg-white shadow-sm dark:bg-gray-900 md:shadow-none lg:relative">
        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          hello
          <div class="h-7"></div>
        </div>
      </header>
      <slot />
    </main>
  </body>
</html>
