{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "allowUnreachableCode": false,
    "checkJs": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "Bundler",
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true
  }
}
