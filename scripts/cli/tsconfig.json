{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
